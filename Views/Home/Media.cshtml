@{
    ViewData["Title"] = "Media Page";
}

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
        <li data-target="#myCarousel" data-slide-to="3"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/images/fox.jpg" alt="Picture 1" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Caption 1
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/fox.jpg" alt="Picture 2" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Caption 2
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/fox.jpg" alt="Picture 3" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Caption 3
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/fox.jpg" alt="Picture 4" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Caption 4
                </p>
            </div>
        </div>
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="row">
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
        <div class="col-xs-9 col-sm-7 col-md-4 col-lg-4">
            <div class="embed-responsive embed-responsive-16by9">
               <img src="~/images/fox.jpg" class="img-responsive" alt="fox1">
            </div>
        </div>
        <p class="col-xs-3 col-sm-5 col-md-2 col-lg-2">
            Words
        </P>

        <div class="col-xs-9 col-sm-7 col-md-4 col-lg-4">
            <div class="embed-responsive embed-responsive-16by9">
                <iframe class="embed-responsive-item" src="https://www.youtube.com/embed/ScMzIvxBSi4"></iframe>
            </div>
        </div>
        <p class="col-xs-3 col-sm-5 col-md-2 col-lg-2">
            Words
        </P>
    </div>
</div>